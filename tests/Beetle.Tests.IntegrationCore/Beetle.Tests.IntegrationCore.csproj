<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp1.1</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <PackageTargetFallback>$(PackageTargetFallback);portable-net45+win8+wp8+wpa81;</PackageTargetFallback>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="wwwroot\css\qunit.css" />
    <Content Include="wwwroot\js\beetle\beetle.js" />
    <Content Include="wwwroot\js\qunit\qunit.js" />
    <Content Include="wwwroot\js\tests\basicTests.ts" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Giver" Version="1.0.0" />
    <PackageReference Include="Microsoft.AspNetCore" Version="1.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="1.1.3" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="1.1.2" />
    <PackageReference Include="Microsoft.VisualStudio.Web.BrowserLink" Version="1.1.2" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="1.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\src\Beetle.Client\lib\beetle.d.ts" Link="wwwroot\js\beetle\beetle.d.ts" />
    <None Include="..\..\src\Beetle.Client\lib\beetle.js" Link="wwwroot\js\beetle\beetle.js" />
    <None Include="..\..\src\Beetle.Client\lib\beetle.lang-tr-TR.js" Link="wwwroot\js\beetle\beetle.lang-tr-TR.js" />
    <None Include="..\..\src\Beetle.Client\lib\beetle.queryExtensions.d.ts" Link="wwwroot\js\beetle\beetle.queryExtensions.d.ts" />
    <None Include="..\..\src\Beetle.Client\lib\beetle.queryExtensions.js" Link="wwwroot\js\beetle\beetle.queryExtensions.js" />
    <None Include="Views\Home\Index.cshtml" />
    <None Include="wwwroot\js\beetle\beetle.d.ts" />
    <None Include="wwwroot\js\beetle\beetle.queryExtensions.d.ts" />
    <None Include="wwwroot\js\qunit\qunit.d.ts" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Beetle.MvcCoreApi\Beetle.MvcCoreApi.csproj" />
    <ProjectReference Include="..\..\src\Beetle.MvcCore\Beetle.MvcCore.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\js\beetle\" />
  </ItemGroup>

  <Target Name="CopyLinkedContentFiles" BeforeTargets="Build">
    <Copy SourceFiles="%(Content.Identity)" DestinationFiles="%(Content.Link)" SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" Condition="'%(Content.Link)' != ''" />
  </Target>

</Project>
